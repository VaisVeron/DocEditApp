@{
    ViewData["Title"] = "Html convert example page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to Html convert example!</h1>
    <form method="post" enctype="multipart/form-data" asp-controller="HtmlConvert" asp-action="Upload">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="file" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>
